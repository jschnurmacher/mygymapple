<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MyGym.GymContactConfirm">
    <ContentPage.Content>
        <StackLayout Padding="15,10,15,0">
            <Label x:Name="contactTitle"
                VerticalOptions="Center"
                Margin="-20,10,-20,0"
                Padding="30,10,10,10"
                Background="#0079bb"
                FontAttributes="Bold"
                TextColor="#fff" />
            <Label x:Name="thankYou"
                VerticalOptions="Center"
                Margin="0,20,0,0"
                FontAttributes="Bold"
                FontSize="15"
                TextColor="#333" />
            <Button
                Text="Back to Account Home" 
                Clicked="BackTopHome_Clicked" 
                Padding="0"
                Margin="0,5,0,5"
                Style="{StaticResource linkStyle}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
